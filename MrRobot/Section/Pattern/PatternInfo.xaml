<Window x:Class="MrRobot.Section.PatternInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Pattern Info"
        Width="500"
        Height="400"
        Left="700"
        Top="100">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="#D9E3EC">
            <Separator Background="#C2CBD3" Margin="0"/>
            <TextBlock Text="Информация о паттерне" Style="{StaticResource HeadName}"/>
            <Separator Background="#C2CBD3" Margin="0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Background="#FFFFE8">
            <TextBox Name="PatternInfoBox"
                     Margin="10"
                     Height="300"
                     AcceptsReturn="True"
                     BorderBrush="#E0E0D1"
                     Padding="5,7"
                     FontSize="14"
                     FontFamily="Courier New"/>
        </StackPanel>

    </Grid>
</Window>
