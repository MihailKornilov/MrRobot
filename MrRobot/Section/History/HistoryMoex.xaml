<UserControl x:Class="MrRobot.Section.HistoryMoex"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Background="#FFF"
             d:DesignWidth="800"
             d:DesignHeight="450">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="210"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Margin="10" BorderBrush="#C6D8E6" BorderThickness="1">
            <StackPanel Background="#ECF3F8" Orientation="Horizontal">
                <TextBlock Name="HeadTB" Margin="8,3,0,0" FontSize="22" Foreground="#444"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0">
            <Button Content="Скачать"
                    Width="100"
                    Height="25"
                    Click="EngineIss"/>
        </Grid>
        
    </Grid>

</UserControl>
